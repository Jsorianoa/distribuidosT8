create\040database\040prueba;
use\040prueba;
create\040table\040usuarios
(
id_usuario\040integer\040auto_increment\040primary\040key,
email\040varchar(256)\040not\040null,
nombre\040varchar(100)\040not\040null,
apellido_paterno\040varchar(100)\040not\040null,
apellido_materno\040varchar(100),
fecha_nacimiento\040date\040not\040null,
telefono\040varchar(20),
genero\040char(1)
);
create\040table\040usuarios\040\040(\040\040id_usuario\040integer\040auto_increment\040primary\040key,\040email\040varchar(256)\040not\040null,\040nombre\040varchar(100)\040not\040null,\040apellido_paterno\040varchar(100)\040not\040null,\040apellido_materno\040varchar(100),\040fecha_nacimiento\040date\040not\040null,\040telefono\040varchar(20),\040genero\040char(1)\040);
create\040table\040fotos_usuarios
(
id_foto\040integer\040auto_increment\040primary\040key,
foto\040longblob,
id_usuario\040integer\040not\040null
);
create\040table\040fotos_usuarios\040\040(\040\040id_foto\040integer\040auto_increment\040primary\040key,\040foto\040longblob,\040id_usuario\040integer\040not\040null\040);
alter\040table\040fotos_usuarios\040add\040foreign\040key\040(id_usuario)\040references\040usuarios(id_usuario);
create\040unique\040index\040usuarios_1\040on\040usuarios(email);
